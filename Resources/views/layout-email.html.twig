{% block mail_subject  %}
{% endblock %}

{% block mail_txt_header  %}
+++++ {{ 'salon.name'|trans({}, 'ssn_therapass') }} ++++++
{% endblock %}

{% block mail_txt_footer  %}
-------------------------------------------------
{{ 'salon.mail.footer'|trans({}, 'ssn_therapass') }}
{% endblock %}

{% block mail_txt_content %}
{% autoescape false %}{{ block('mail_txt_header') }}

{% block mail_txt_content_body %}{% endblock %}

{{ block('mail_txt_footer') }}{% endautoescape %}
{% endblock %}

{% block mail_html_header  %}
<table cellspacing="0" cellpadding="4" border="0" width="100%">
	<tr>
		<td valign="bottom" width="150" align="left">
			<a href="{{ salon_url }}"><img src="{{ passbook_url ~ '/bundles/ssntherapass/images/logo.png' }}" style="border: 0px;" alt="{{ 'salon.name'|trans({}, 'ssn_therapass')|e }}" /></a>
		</td>
		<td valign="bottom" align="right"></td>
	</tr>
</table>
{% endblock %}

{% block mail_html_footer  %}
<div style="padding: 8px; background-color: #EDEDED; margin-top: 15px;">
{{ block('mail_txt_footer')|nl2br }}
</div>
{% endblock %}

{% block mail_html_style %}
<style>
span, a, div, p, b, i, strong, u, td, body { font-family: Lucida Grande, Arial, Helvetica, Kalimati, sans-serif; font-size: 11px; }
strong { font-weight: bold; }
ul { list-style-type: square; }
ul ul { list-style-type: circle; }
</style>
{% endblock %}

{% block mail_html_content %}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<title>{{ block('mail_subject') }}</title>
	<meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1">
</head>
<body bgcolor="#FFFFFF" leftmargin="0" topmargin="0" marginwidth="0" marginheight="0">
<table cellspacing="0" cellpadding="0" border="0" width="800" align="center">
	<tr>
		<td bgcolor="#ffffff" align="left" width="800">
			{{ block('mail_html_header') }}
		</td>
	</tr>
	<tr>
		<td bgcolor="#ffffff" align="left" width="800">
			{% autoescape false %}{% block mail_html_content_body %}{% endblock %}{% endautoescape %}
		</td>
	</tr>
	<tr>
		<td bgcolor="#ffffff" align="left" width="800">
			{{ block('mail_html_footer') }}
		</td>
	</tr>
</table>
{% endblock %}