<!DOCTYPE html>
<html lang="{{ locale }}">
  <head>
    <meta charset="utf-8">
    <title>{% block meta_title %}{{ 'layout.title'|trans({}, "ssn_therapass") }} | {{ 'salon.name'|trans({}, "ssn_therapass") }}{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Laurent Chedanne - http://www.chedanne.pro">

    <!-- Le styles -->
    {% block stylesheets %}
		{% stylesheets
			'@SSNTherapassBundle/Resources/public/bootstrap/css/bootstrap.css'
			'@SSNTherapassBundle/Resources/public/bootstrap/css/bootstrap-responsive.css'
			'@SSNTherapassBundle/Resources/public/css/style.css'
		%}
		<link rel="stylesheet" href="{{ asset_url }}" />
		{% endstylesheets %}
	{% endblock %}
	{% block jsheader %}
	<!--[if lt IE 9]>
	    {% javascripts
		    '@SSNTherapassBundle/Resources/public/js/html5shiv.js'
		%}
		<script src="{{ asset_url }}"></script>
		{% endjavascripts %}
	<![endif]-->
	{# <script type="text/javascript" src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script> #}
	{% endblock %}

    <!-- Fav and touch icons -->
    <!-- <link rel="apple-touch-icon-precomposed" sizes="144x144" href="../assets/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="../assets/ico/apple-touch-icon-114-precomposed.png">
      <link rel="apple-touch-icon-precomposed" sizes="72x72" href="../assets/ico/apple-touch-icon-72-precomposed.png">
                    <link rel="apple-touch-icon-precomposed" href="../assets/ico/apple-touch-icon-57-precomposed.png">
                                   <link rel="shortcut icon" href="../assets/ico/favicon.png"> -->
</head>
<body>
  	{% set is_admin = (app.security.getToken() is not null and is_granted('ROLE_ADMIN')) %}
  	{% block body %}
    <div class="container-fluid">
    	{% block header %}
    	<div class="row-fluid">
	    	<div class="masthead span10 offset1">
		        <a href="{{ salon_url }}" title="{{ 'layout.title'|trans({}, "ssn_therapass") }} | {{ 'salon.name'|trans({}, "ssn_therapass") }}"><img alt="{{ 'salon.name'|trans({}, "ssn_therapass") }}" src="{{ asset('bundles/ssntherapass/images/logo.png') }}" /></a>
		    </div>
		</div>
		{% endblock %}
		<div class="row-fluid">
        	<div class="span10 offset1">
        		<div class="navbar main">
		    		<div class="navbar-inner">
					    <ul class="nav">
					    	{% block navigation_links %}
						    <li class="active"><a href="{{ path('ssn_therapass_home') }}">{{ 'menu.accueil'|trans({}, 'ssn_therapass') }}</a></li>
						    {% if is_admin %}<li><a href="{{ path('ssn_therapass_admin_home') }}">Administration</a></li>
						    {% else %}<li><a href="#">{{ 'menu.booking'|trans({}, 'ssn_therapass') }}</a></li>{% endif %}
						    {% endblock %}
					    </ul>
		    		</div>
				</div>
			</div>
		</div>
		<div class="row-fluid">
			<div class="span10 offset1">
				<div class="row-fluid">
					{% block admin_menu %}{% endblock %}
					{% block ssn_therapass_content %}{% endblock %}
				</div>
			</div>
		</div><!--/row-->
		<hr>
		<footer>
	      	{% block footer %}
	        <p>&copy; {{ 'salon.name'|trans({}, 'ssn_therapass') }} - <a href="{{ path('login') }}">{{ 'footer.administration'|trans({}, 'ssn_therapass') }}</a></p>
	      	{% endblock %}
		</footer>
    </div><!--/.fluid-container-->
	{% endblock %}
    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    {% block javascripts %}
	    {% javascripts
		    '@SSNTherapassBundle/Resources/public/jquery/jquery-1.10.2.min.js'
		    '@SSNTherapassBundle/Resources/public/bootstrap/js/bootstrap.min.js'
		%}
		<script src="{{ asset_url }}"></script>
		{% endjavascripts %}
	{% endblock %}
  </body>
</html>